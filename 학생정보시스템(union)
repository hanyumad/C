#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define TRUE 1
#define FALSE 0
#define MAX 1000

struct Student {
    char name[20];
    int age;
    char gender[20];
    union Info {
        char hobby[20];
        char etc[20];
    } info;
    int hasHobby;  // 1: hobby, 0: etc, -1: 아무것도 없음
};

void information(struct Student *p) {
    struct Student a = {"hong", 30, "M", .info.hobby = "soccer", 1};
    struct Student b = {"kim", 25, "M", .info.hobby = "music", 1};
    struct Student c = {"park", 20, "F", .info.hobby = "movie", 1};
    *(p+0) = a;
    *(p+1) = b;
    *(p+2) = c;
}

int inputStudent(struct Student *p, int *n) {
    char temp[20];

    while (1) {
        printf("\nName (input 'end' to stop): ");
        scanf("%s", temp);
        if (strcmp(temp, "end") == 0) {
            return FALSE;
        }
        if (strlen(temp) == 0) {
            printf("input name.\n");
        } else
            break;
    }
    strcpy((*(p+*n)).name, temp);

    int age;
    while (1) {
        printf("Age: ");
        if (scanf("%d", &age) != 1 || age <= 0) {
            printf("input more than 0.\n");
            while (getchar() != '\n');
        } else
            break;
    }
    (*(p+*n)).age = age;

    while (1) {
        printf("Gender (M/F): ");
        scanf("%s", temp);
        if (strcmp(temp, "M") != 0 && strcmp(temp, "F") != 0) {
            printf("input M or F.\n");
        } else
            break;
    }
    strcpy((*(p+*n)).gender, temp);

    while (1) {
        printf("Input Hobby (1), etc (0), or skip (-1): ");
        int choice;
        if (scanf("%d", &choice) != 1 || (choice != 1 && choice != 0 && choice != -1)) {
            printf("input 1, 0, or -1.\n");
            while (getchar() != '\n');
            continue;
        }
        (*(p+*n)).hasHobby = choice;
        if (choice == 1) {
            printf("Hobby: ");
            scanf("%s", (*(p+*n)).info.hobby);
        } else if (choice == 0) {
            printf("Etc: ");
            scanf("%s", (*(p+*n)).info.etc);
        }
        break;
    }

    (*n)++;
    return TRUE;
}

void printStudent(struct Student *p, int n) {
    printf("\n--- Student Information ---\n");

    for (int i = 0; i < n; i++) {
        printf("%d. %s %d %s ", i+1, (*(p+i)).name, (*(p+i)).age, (*(p+i)).gender);
        if ((*(p+i)).hasHobby == 1)
            printf("Hobby: %s\n", (*(p+i)).info.hobby);
        else if ((*(p+i)).hasHobby == 0)
            printf("Etc: %s\n", (*(p+i)).info.etc);
        else
            printf("(No Info)\n");
    }
}

void startProgram(struct Student *p) {
    int n = 3;
    information(p);
    printStudent(p, n);
    while (TRUE) {
        if (inputStudent(p, &n) == FALSE) {
            break;
        }
        printStudent(p, n);
    }
}

int main() {
    struct Student *p = (struct Student*)malloc(sizeof(struct Student) * MAX);
    startProgram(p);
    free(p);
    return 0;
}
